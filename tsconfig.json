{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./server/dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@app/*": [
        "./server/src/*"
      ]
    }
  },
  "exclude": ["node_modules", "server/dist"]
}
